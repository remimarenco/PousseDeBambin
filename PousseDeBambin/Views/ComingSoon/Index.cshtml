@model PousseDeBambin.Models.Prospect

@{
    ViewBag.Title = "Pousse De Bambin !";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:700,400' rel='stylesheet' type='text/css'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="title" content="Pousse De Bambin !" />
    <meta name="description" content="Soyez futés pour la naissance de bébé" />

    @Styles.Render("~/Content/ComingSoon/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
    </header>
    <div id="content-wrapper">
        <div class="shadow-overlay"></div>

        <div id="container">
            <div class="row-fluid">
                <div class="span12">
                    <div id="logo">
                        <img id="logo_img" src="~/Content/ComingSoon/images/logo_bienvenue_bebe.jpg" alt="Impossible d'afficher le logo :(" />
                    </div>
                </div>
            </div>
            <div class="spacer"></div>
            <div class="row-fluid">

                <div class="span12">
                    <!-- Tagline text -->
                    <div id="tagline">
                        <p>Découvrez la façon ultra pratique pour préparer l'arrivée de votre bébé</p>
                    </div>
                </div>
                <!-- End Span -->

            </div>
            <div class="row-fluid">

                <div class="span12">
                    <!-- Description HTML -->
                    <div id="description">
                        <p>
                            <span class="nomSite">Pousse De Bambin</span> vous permet de <b>préparer l'arrivée de bébé</b> de la meilleure manière qui soit...
                            <br>
                        </p>
                        <p>
                            Pour en savoir plus, inscrivez votre email ci-dessous.<br>
                        </p>
                    </div>
                </div>
                <!-- End Span -->

            </div>
            <div class="row-fluid">
                <div class="span12">
                    <!-- Subscription form -->
                    <div id="subscribe">

                        <div class="clearfix"></div>
                        <div class="spacer"></div>

                        <!-- Input Prospect -->
                        @{
                            if (Model == null)
                            {
                                using (Html.BeginForm())
                                {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.EmailAddress, new { @class = "input input-large inputs colorize_border-color required", placeholder = "Entrez votre email ici..." })
                                @* @Html.ValidationMessageFor(model => model.EmailAddress) *@

                                <input class="submit button btn-right btn btn-large btn-primary" id="submit_button" name="submit" type="submit" value="Prévenez moi !">
                            </div>
                                
                                }
                            }
                            else
                            {
                            <div class="thanks" id="kol_thank_you">
                                <div class="common_thank_you_message">
                                    <h3>Merci pour votre intérêt ! Nous vous recontactons bientôt, c'est promis :D.</h3>
                                    <p>En attendant, suivez nos aventures folles sur <a class="liensComingSoon" href="https://www.facebook.com/PousseDeBambin">Facebook</a>, et sur <a class="liensComingSoon" href="https://twitter.com/poussedebambin">Twitter</a>.</p>
                                    <p>
                                        Rémi &amp; Marion.<br>
                                    </p>

                                </div>
                            </div>
                            }
                        }
                        <!-- End Input Prospect -->

                        <div class="clear"></div>

                    </div>

                </div>
            </div>
            <div class="row-fluid">
                <div class="offset2 span8">
                    <!-- Alert countdown2 -->
                    <div class="alert">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        Nous peaufinons actuellement la <strong>bêta du site</strong> pour vous offrir la meilleure qualité possible...encore quelques jours d'attente et vous pourrez faire une liste de vos envies les plus folles !
                    </div>
                </div>
                <div class="span12">
                    <!-- Countdown -->
                    <div id="countdown">
                    </div>
                </div>
                <!-- End Span -->
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <!-- Twitter feed -->
                    <div id="twitter" class="tweet"></div>
                </div>
                <!-- End Span -->
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <!-- Social media icons -->
                    <div id="social">
                        <ul>

                            <li class="facebook"><a href="https://www.facebook.com/PousseDeBambin">Fan</a></li>

                            <li class="twitter"><a href="https://twitter.com/poussedebambin">Follow</a></li>

                            <li class="google"><a href="https://plus.google.com/b/107742608982001507871/107742608982001507871/about/p/pub">Circle</a></li>

                        </ul>

                    </div>
                </div>
                <!-- End Span -->
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/ComingSoon/js")
    <script>
        $(function () {
            launchTime = new Date('10/24/2013 12:00:00'); // Set launch: [year], [month], [day], [hour]...
            launchTime.setDate(launchTime.getDate());
            $("#countdown").countdown({
                until: launchTime,
                format: "odHMS",
                whichLabels: function (amount) {
                    var units = amount % 10;
                    var tens = Math.floor(amount % 100 / 10);
                    return (amount == 1 ? 1 : 2);
                }
            });
        });

        $(function () {
            launchTime = new Date('10/18/2013'); // Set launch: [year], [month], [day], [hour]...
            launchTime.setDate(launchTime.getDate());
            $("#countdown2").countdown({
                until: launchTime,
                format: "odHMS",
                whichLabels: function (amount) {
                    var units = amount % 10;
                    var tens = Math.floor(amount % 100 / 10);
                    return (amount == 1 ? 1 : 2);
                }
            });
        });
    </script>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-47337807-1', 'poussedebambin.com');
        ga('send', 'pageview');
    </script>
</body>
</html>
