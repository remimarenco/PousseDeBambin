@model PousseDeBambin.ViewModels.InfosListViewModel

<div id="manageList">
    <div class="mainContentCreateList main_description">
        <div class="form_create_list">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @Html.HiddenFor(id => Model.ListId)


                <fieldset>
                    <legend>Quelques informations pour vos proches !</legend>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Name)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Name)

                    </div>
                    <div>
                        @Html.ValidationMessageFor(model => model.Name, String.Empty, new { @class = "error_message" })
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Description)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                    <div style="margin-top:2%;">
                        <p>
                            <input class="btn btn-validation-liste" type="submit" value="Finaliser ma liste" />
                        </p>
                    </div>
                </fieldset>
            }
        </div>
        <div class="img_description"></div>
    </div>
</div>

