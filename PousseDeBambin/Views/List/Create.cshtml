@model PousseDeBambin.Models.List

@{
    ViewBag.Title = "Création de votre liste !";
}

<h2 class="create_list_title"></h2>
<div class="form_create_list">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Votre liste prend racine...</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)
                
            </div>
            <div>
                @Html.ValidationMessageFor(model => model.Name, String.Empty, new { @class="error_message" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.BirthDate)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.BirthDate, new { @class = "picker" })
                
            </div>
            <div>
                @Html.ValidationMessageFor(model => model.BirthDate, String.Empty, new { @class = "error_message" })
            </div>
            <div style="margin-top:2%;">
                <p>
                    <input class="btn btn-success" type="submit" value="" />
                </p>
            </div>
        </fieldset>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script type="text/javascript">

            $(document).ready(function () {
                $('.picker').datepicker({
                    dateFormat: 'dd.mm.yy',
                    changeMonth: true,
                    changeYear: true,
                    selectOtherMonths: true
                });
            });
        </script>
    }
</div>

    <div class="img_create"></div>