    </div>
</div>
<script>
    $(document).ready(function () {
        $('.how-to-carousel .carousel').each(function () {
            var config = {
                displayedElement: 1,
                autorotation: true,
                autostart: true,
                effect: {
                    type: 'slide',
                    params: {
                        pause: 5000,
                        duration: 1000
                    }
                },
                navigation: {
                    type: 'closest',
                }
            };

            $(this).setCarousel(config);
        });


    });
</script>